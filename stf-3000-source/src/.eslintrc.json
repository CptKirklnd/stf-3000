{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "warn",
            2
        ],
        "sort-imports": [
            "warn",
            {
                "memberSyntaxSortOrder": [
                    "none",
                    "all",
                    "single",
                    "multiple"
                ],
                "allowSeperatedGroups": true
            }
        ],
        "no-undef": [
            "error"
        ],
        "comma-dangle": [
            "always"
        ],
        "max-len": [
            {
                "code": 80
            }
        ]
    }
}